<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_music"
    tools:context=".MusicActivity">

    <ImageView
        android:id="@+id/image_music"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/number_nine"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/text_margin_main"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_music"
            tools:text="Nome da musica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name_artist"
            tools:text="Nome do artista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>