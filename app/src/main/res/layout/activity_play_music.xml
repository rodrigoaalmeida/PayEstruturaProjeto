<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayMusicActivity">

    <ImageView
        android:id="@+id/image_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_container_duzentos"
        android:layout_margin="@dimen/distancia_dez" />

    <TextView
        android:id="@+id/music_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_container_cinquenta_seis"
        android:layout_margin="@dimen/distancia_dez"
        android:gravity="bottom"
        android:textColor="@color/color_text_preto"
        android:textSize="@dimen/text_size_dezoito"
        android:textStyle="bold"
        tools:text="Musica" />

    <TextView
        android:id="@+id/artist_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_container_cinquenta_seis"
        android:layout_margin="@dimen/distancia_dez"
        android:textColor="@color/color_text_preto"
        android:textSize="@dimen/text_size_dezesseis"
        android:textStyle="italic"
        tools:text="Nome artista" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/distancia_dez">

        <!--icones tirados do: https://material.io/tools/icons/?style=baseline-->
        <ImageView
            android:id="@+id/button_previous_play"
            style="@style/play_music_button"
            android:src="@drawable/baseline_skip_previous_black_48" />

        <ImageView
            android:id="@+id/button_pause_play"
            style="@style/play_music_button"
            android:src="@drawable/baseline_pause_circle_outline_black_48" />

        <ImageView
            android:id="@+id/button_play_play"
            style="@style/play_music_button"
            android:src="@drawable/baseline_play_arrow_black_48" />

        <ImageView
            android:id="@+id/button_next_play"
            style="@style/play_music_button"
            android:src="@drawable/baseline_skip_next_black_48" />
    </LinearLayout>

</LinearLayout>