<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayMusicActivity">

    <ImageView
        android:id="@+id/image_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/number_ten"/>

    <TextView
        android:id="@+id/music_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Musica"/>
    <TextView
        android:id="@+id/artist_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nome artista"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/baseline_skip_previous_black_48"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <ImageView
            android:src="@drawable/baseline_play_arrow_black_48"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <ImageView
            android:src="@drawable/baseline_skip_next_black_48"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

</LinearLayout>